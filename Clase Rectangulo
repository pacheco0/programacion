//Creacion de Clase

#pragma once
class Rectangulo
{	private:
	float base;
	float altura;
	float area;

	public:
	Rectangulo(void);
	~Rectangulo(void);
	float calcular_area(float b,float h);
};

//Creando Programa Principal

#include "stdafx.h"
