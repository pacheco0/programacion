void main ()
{Rectangulo Rectangulo1;
 float a,b;
 cout <<"Ingrese su base: "<<endl;
 cin>>a;
 cout<<"Ingrese su altura: "<<endl;
 cin>>b;
 cout<<"El area es: "<<Rectangulo1.calcular_area(a,b);
 getch();
	
}

//Constructor y Destructor
#include "StdAfx.h"
#include "Rectangulo.h"


Rectangulo::Rectangulo(void)
{
}


Rectangulo::~Rectangulo(void)
{
}

float Rectangulo::calcular_area(float b,float h)
{area=(b*h);
 return area;
}
